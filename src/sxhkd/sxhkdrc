# Reloads sxhkd configuration
super + Escape + r
    pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config' -t 1500

# Launch Terminal
super + Return
    alacritty

# Hide or Unhide Polybar
super + p
    sh $HOME/bin/toggle-polybar

# Set random wallpaper
super + w
    sh $HOME/bin/random_wallpaper.sh


# Change language (Switch keyboard layout)
super + l
    rofi -show drun -modi drun:rofi -show-icons -theme ~/.config/rofi/config.rasi

# Launch Rofi Menu
super + {d,x}
    {rofi -show drun,sh $HOME/bin/powermenu}

# Launch Applications
super + shift + {f,n,p,t,c,v,i,x,q,k,l}
    {firefox, \
    thunar, \
    pavucontrol, \
    telegram-desktop, \
    code, \
    virtualbox, \
    firefox --private-window, \
    sh $HOME/bin/xcolor-pick, \
    sh $HOME/bin/bible, \
    alacritty -e calcurse, \
    sh $HOME/bin/screen-lock}
     
# Select window to close
ctrl + super + alt + k
    {xkill}

# Volume controls
XF86Audio{RaiseVolume,LowerVolume,Mute}
    sh $HOME/bin/volume{ --up, --down, --toggle}

# Brightness controls
XF86MonBrightness{Up,Down}
    sh $HOME/bin/brightness{ --up, --down}

# Screenshot
Print
    flameshot gui

#
#
# BSPWM HOTKEYS
#
#

# Quit/restart bspwm
ctrl + shift + {q,r}
    bspc {quit,wm -r}

# Close and kill
super + c
    bspc node -c

# Alternate between the tiled and monocle layout
super + space
    bspc node -t "~"{floating,tiled}

#
# State/flags
#

# Set the window state
super + {t,ctrl + t,f}
    bspc node -t {tiled,pseudo_tiled,fullscreen}
    
# Change focus to next window, including floating window
alt + {_,shift + }Tab
    bspc node -f {next.local,prev.local}

#
# Focus/swap
#

# Focus the last node/desktop
super + {grave,Tab}
    bspc {node,desktop} -f last

# Send focus window to current desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

#
# Preselect
#

# Preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# Cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# Cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# Move/resize
#

# Expanding windows
super + control {h,j,k,l}
    bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20} 

# Send the window to another edge of the screen
super + {_,alt + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# Set the node flags
super + ctrl + {m,x,y,z}
    bspc node -g {marked,locked,sticky,private}

# Swap the current node and the biggest window
super + g
    bspc node -s biggest.window

# Переключение раскладок
super + space
    sh ~/.config/change_layout.sh


# Уменьшить громкость
super + F8
    pactl set-sink-volume @DEFAULT_SINK@ -5%

# Увеличить громкость
super + F9
    pactl set-sink-volume @DEFAULT_SINK@ +5%

# Отключить звук
super + F3
    pactl set-sink-mute @DEFAULT_SINK@ toggle



# Уменьшить яркость (FN + F6)
super + F6
    brightnessctl set 10%-

# Увеличить яркость (FN + F7)
super + F7
   brightnessctl set +10%
# ctrl + A 
super + {_,shift + }a
  bspc desktop -{f,F}
# ctrl + A (rus layout)
super + {_,shift + }ф
  bspc desktop -{f,F}


  # window manager
  super + button1
    bspc node -t ~floating; xdotool mousemove_relative --sync 10 10
